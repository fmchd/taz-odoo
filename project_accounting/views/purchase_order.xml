<odoo>
  <data>

        <record id="purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='price_subtotal']" position="after">
                        <field name="direct_payment_sale_order_line_id" readonly="True" widget="many2many_tags" optional="show" on_change="1"/>
			<field name="order_direct_payment_validated_amount" string="Mnt p/d validÃ©" optional="show" on_change="1"/>
			<field name="order_direct_payment_validated_detail" string="Com. p/d" optional="show" on_change="1"/>
			<field name="reselling_subtotal" string="Mnt revente" optional="show" on_change="1"/>
			<field name="margin_amount" optional="show" on_change="1"/>
			<field name="margin_rate" widget="progressbar" optional="show" on_change="1"/>
			<field name="invoice_lines" optional="hide"  on_change="1" widget="many2many_tags"/>
			<field name="previsional_invoice_date" optional="hide"  on_change="1" />
                </xpath>
		<field name="order_line" position="attributes">
			<attribute name="context">{'default_state': 'draft', 'default_analytic_distribution' : context.get('default_analytic_distribution')}</attribute>
		</field>
		<!--
		<xpath expr="//field[@name='order_line']/tree" position="attributes">
			<attribute name="decoration-success">direct_payment_sale_order_line_id == True</attribute>
		</xpath>
		-->
            </field>
        </record>

  </data>
</odoo>
