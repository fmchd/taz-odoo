<odoo>
	<data>

        <record id="event_registration_light.event_form_inherit" model="ir.ui.view">
            <field name="name">Event</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_form"/>
            <field name="arch" type="xml">
                <field name="tag_ids" position="after">
                        <field name="registration_form_url" readonly="1" widget="url" />
                </field>
                <field name="auto_confirm" position="replace">
                        <field name="auto_confirm" readonly="1" help="Auto-confirm should be false to perfom the two step registration process : create draft registration, send invitation mail and let it be confirmed by guest." />
                </field>
            </field>
        </record>

	</data>
</odoo>
