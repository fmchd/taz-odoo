<odoo>

<template id="registration_form" name="Registration form">
		<head>
			<link rel="stylesheet" type="text/css" href="/event_registration_light/static/style.css"/>
			<title><t t-esc="event.name or 'Subscription'"/></title>
			<link type="image/x-icon" rel="shortcut icon" href="/web/image/res.company/1/favicon" />
		</head>
		<body>
			<img src='/event_registration_light/static/img/logo.png' alt="Logo"/>
			<!--
			<p>Merci de confirmer votre présence pour l'évènement <t t-esc="event.name" /> <br/> qui aura lieu le <t t-esc="formated_dates"/></p>
			-->

			<t t-esc="event.description_web_form" />
			
			<form t-attf-action="/eventlight/#{event.id}/registration/submit" method="post">
				<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
				<label form="email">Inscrivez votre adresse email ci-dessous *</label>
				<input type="email" name="email" id="email" required="True" />
				<label form="first_name">Prénom *</label>
				<input type="text" name="first_name" id="first_name" required="True" />
				<label form="email">Nom *</label>
				<input type="text" name="name" id="name" required="True" />
				<input class="button" type="submit" value="Je m'inscris" />
			</form>
		</body>
</template>

<template id="registration_submit" name="Registration result">
		<head>
			<link rel="stylesheet" type="text/css" href="/event_registration_light/static/style.css"/>
			<title><t t-esc="event.name or 'Subscription'"/></title>
			<link type="image/x-icon" rel="shortcut icon" href="/web/image/res.company/1/favicon" />
		</head>
		<body>
			<img src='/event_registration_light/static/img/logo.png' alt="Logo"/>
			<p>Inscription confirmée pour l'évènement.</p>
		</body>
</template>

</odoo>
