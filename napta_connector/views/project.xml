           <record model="ir.ui.view" id="project_form_inherit">
              <field name="name">Project</field>
	      <field name="inherit_id" ref="project_accounting.project_form"/>
              <field name="model">project.project</field>
              <field name="priority">5</field>
	      <field name="arch" type="xml">
                	<field name="name" position="after">
				<button type="object" name="napta_init_from_odoo" string="Napta init from Odoo" groups="base.group_system"/>
				<button type="object" name="goto_napta" string="Voir sur Napta" />
                	</field>
                	<field name="partner_id" position="after">
				<field name="is_prevent_napta_creation" attrs="{'readonly': [('napta_id', '!=', None)]}"/>
                	</field>
	      </field>
	    </record>

