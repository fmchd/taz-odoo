<?xml version="1.0" encoding="utf-8"?>
<odoo><data noupdate="1">
    <record model="ir.cron" forcecreate="True" id="employee_availability_scheduler">
        <field name="name">Employee availability refresh</field>
        <field name="model_id" ref="model_hr_employee"/>
        <field name="state">code</field>
        <field name="code">model.refresh_availability_all_employees()</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">weeks</field>
	<!-- Next call : next monday Ã  3 am -->
	<field name="nextcall" eval="(DateTime.now() + timedelta(days=7-DateTime.now().weekday())).strftime('%Y-%m-%d 03:00:00')" />
        <field name="numbercall">-1</field>
        <field name="doall" eval="True" />
    </record>
</data></odoo>
