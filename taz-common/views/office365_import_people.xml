<odoo>
  <data>
    <record model="ir.ui.view" id="taz-common.office365_import_people_tree">
      <field name="name">Import contacts Office365</field>
      <field name="model">taz.office_people</field>
      <field name="arch" type="xml">
        <tree create="false" editable="top">
          <field name="display_name" attrs="{'readonly': [('odoo_id','!=', False)]}" optional="hide"/>
          <field name="first_name" attrs="{'readonly': [('odoo_id','!=', False)]}"/>
          <field name="last_name" attrs="{'readonly': [('odoo_id','!=', False)]}"/>
          <field name="email" attrs="{'readonly': [('odoo_id','!=', False)]}"/>
          <field name="parent_id" attrs="{'readonly': [('odoo_id','!=', False)]}"/>
          <field name="category_id" widget="many2many_tags"  attrs="{'readonly': [('odoo_id','!=', False)]}"/>
          <field name="odoo_id" attrs="{'readonly': [('odoo_id','!=', False)]}" optional="hide"/>
          <field name="origin_user_id" optional="hide"/>
	  <field name="user_id" attrs="{'readonly': [('odoo_id','!=', False)]}" optional="show" string="Vendeur"/>
      		<button string="Créer sur Odoo" name="import_partner" type="object" class="oe_highlight"  attrs="{'invisible': [('odoo_id','!=', False)]}"/>
      		<button string="Éditer sur Odoo" icon="fa-eye" name="open_res_partner" type="object" class="oe_highlight"  attrs="{'invisible': [('odoo_id','=', False)]}"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="taz-common.office365_import_people_search">
        <field name="name">taz.office_people_search</field>
        <field name="model">taz.office_people</field>
        <field name="arch" type="xml">
           <search string="Import contacts Office365">
                <field name="first_name" string="Prénom ou Nom" filter_domain="['|', ('first_name', 'ilike', self), ('last_name', 'ilike', self)]"/>
                <field name="parent_id" string="Entreprise" filter_domain="[('parent_id', 'ilike', self)]"/>
                <field name="category_id" string="Étiquette" />
            <filter string="Contacts absents d'Odoo" name="contacts_not_in_odoo"
                domain="[('odoo_id', '=', False)]"
                help="N'afficher que les contacts qui ne sont pas encore sur Odoo"/>
            <separator/>
            <group expand="0" string="Group By">
                <filter string="Entreprise" name="group_parent" context="{'group_by': 'parent_id'}"/>
            </group>
        </search>
        </field>
    </record>

    <record id="taz-common.office365_import_people_action" model="ir.actions.act_window">
        <field name="name">Import contacts Office365</field>
        <field name="res_model">taz.office_people</field>
        <field name="view_mode">tree</field>
	<field name="domain">[('origin_user_id', '=', uid)]</field>	
        <field name="context">{
                    'search_default_contacts_not_in_odoo': 1, 
            }</field>
    </record>
    <!--
    <record id="taz-common.business_action_action_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="act_window_id" ref="taz-common.business_action_action"/>
    </record>
    <record id="taz-common.business_action_action_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="act_window_id" ref="taz-common.business_action_action"/>
    </record>
    -->
    <menuitem name="Import contacts Office365" id="taz-common.office365_import_people" parent="taz-common.commerce" action="taz-common.office365_import_people_action"/>

  </data>
</odoo>
