<odoo>
    <data>
           <record model="ir.ui.view" id="project_win_loose_pivot">
	      <field name="name">pivot.project_win_loose_pivot</field>
	      <field name="model">project.project</field>
	      <field name="arch" type="xml">
		<pivot string="Projet" display_quantity="1" default_order="rel_industry_business_priority asc">
		    <field name="rel_industry_business_priority" type="row"/>
		    <field name="rel_partner_industry_id" type="row"/>

		    <field name="date_win_loose" interval="month" type="col"/>

		    <field name="reporting_company_part_amount_initial_only_code_3" type="measure" string="CA interne estimé (code 3)"/>
		    <field name="reporting_outsource_part_marging_amount_initial_only_code_3" type="measure" string="Markup estimé (code 3)"/>
		    <field name="reporting_company_part_amount_current_at_least_code_4" type="measure" string="CA interne commandé (code 4+)"/>
		    <field name="reporting_outsource_part_marging_amount_current_at_least_code_4" type="measure" string="Markup commandé (code 4+)"/>

		</pivot>
	      </field>
	  </record>

	    <record id="open_view_project_win_loose_action" model="ir.actions.act_window">
		<field name="name">Projets passés dans un statut Accord client/Commandé+ par mois de bascule</field>
		<field name="res_model">project.project</field>
		<field name="view_mode">pivot</field>
		<field name="context">{'search_default_win_loose_this_year':1}</field>
		<field name="view_ids" eval="
				    [
				    (5, 0, 0),
				    (0, 0, {'view_mode': 'pivot', 'view_id': ref('dashboard_global.project_win_loose_pivot')}),
				      ]" />
	    </record>

	    <menuitem name="Suivi de la prise de commande" id="project_win_loose" parent="spreadsheet_dashboard.spreadsheet_dashboard_menu_root" action="open_view_project_win_loose_action" sequence="7"/>


   </data>
</odoo>
